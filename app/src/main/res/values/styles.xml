<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GroupLayout">
        <item name="android:layout_height">48dip</item>
        <item name="android:paddingLeft">36dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_group</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:tag">@string/font_roboto_light</item>
        <item name="android:textColor">@color/colorTextItem</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ItemLayout" parent="GroupLayout">
        <item name="android:background">@drawable/bg_item</item>
    </style>
</resources>
